options {
	acache-enable no;
	auth-nxdomain no;
	directory "/var/cache/bind";
	dnssec-validation auto;
	forwarders { 127.0.0.1 port 1053; };
	forward only;
	listen-on { any; };
	listen-on-v6 { any; };
	max-cache-size 32M;
	min-cache-ttl 3600;
	notify no;
	version none;
};

server 127.0.0.1 {
	tcp-only yes;
};

